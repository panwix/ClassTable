<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ww"
        android:orientation="vertical"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="科目：" >
            </TextView>

            <EditText
                android:id="@+id/et0"
                android:alpha="0.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:textColor="#000000"
                android:layout_toRightOf="@id/tv0" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="#000000"
                android:text="教室：" >
            </TextView>

            <EditText
                android:id="@+id/et1"
                 android:alpha="0.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:textColor="#000000"
                android:layout_toRightOf="@id/tv1" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="#000000"
                android:text="上课老师：" >
            </TextView>

            <EditText
                android:id="@+id/et2"
                 android:alpha="0.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:textColor="#000000"
                android:layout_toRightOf="@id/tv2" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="#000000"
                android:text="联系电话：" >
            </TextView>

            <EditText
                android:id="@+id/et3"
                 android:alpha="0.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:textColor="#000000"
                android:layout_toRightOf="@id/tv3" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv4"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="手机:" >
            </TextView>

            <EditText
                android:id="@+id/et4"
                 android:alpha="0.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:textColor="#000000"
                android:layout_toRightOf="@id/tv4" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv5"
                 android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="办公室：" >
            </TextView>

            <EditText
                android:id="@+id/et5"
                 android:alpha="0.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:textColor="#000000"
                android:layout_toRightOf="@id/tv5" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv6"
                 android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email：" >
            </TextView>

            <EditText
                android:id="@+id/et6"
                 android:alpha="0.2"
                  android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv6" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv7"
                 android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上课周：" >
            </TextView>

            <EditText
                android:id="@+id/et7"
                 android:alpha="0.2"
                  android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv7" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv8"
                 android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上课在第几大节：" >
            </TextView>

            <EditText
                android:id="@+id/spinner1"
                 android:alpha="0.2"
                  android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv8"
                android:digits="0123456789"
                android:hint="请输入123456中的一个" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv9"
                 android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周几上课：" >
            </TextView>

            <EditText
                android:id="@+id/spinner2"
                 android:alpha="0.2"
                  android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv9"
                android:digits="0123456789"
                android:hint="请输入12345中的一个" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn9"
                 android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消" >
            </Button>

            <Button
                android:id="@+id/btn10"
                 android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btn9"
                android:text="提交" >
            </Button>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>